{
	"info": {
		"_postman_id": "companies-api-collection",
		"name": "Companies API - Alytn Arzuw",
		"description": "API endpoints for working with companies through the existing clients API structure",
		"schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
	},
	"item": [
		{
			"name": "Get All Companies",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/clients/companies",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"clients",
						"companies"
					]
				},
				"description": "Get list of all unique company names from clients"
			},
			"response": []
		},
		{
			"name": "Get Clients by Company",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/clients/company/{{company_name}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"clients",
						"company",
						"{{company_name}}"
					]
				},
				"description": "Get all clients that belong to a specific company"
			},
			"response": []
		},
		{
			"name": "Create Client with Contacts",
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{client_name}}\",\n  \"company_name\": \"{{company_name}}\",\n  \"contacts\": [\n    {\n      \"type\": \"phone\",\n      \"value\": \"{{phone_number}}\"\n    },\n    {\n      \"type\": \"email\",\n      \"value\": \"{{email}}\"\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/clients",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"clients"
					]
				},
				"description": "Create a new client with contacts"
			},
			"response": []
		},
		{
			"name": "Get Client with Contacts",
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{base_url}}/api/clients/{{client_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"clients",
						"{{client_id}}"
					]
				},
				"description": "Get a specific client with their contacts"
			},
			"response": []
		},
		{
			"name": "Update Client with Contacts",
			"request": {
				"method": "PUT",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					},
					{
						"key": "Authorization",
						"value": "Bearer {{auth_token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"name\": \"{{updated_client_name}}\",\n  \"company_name\": \"{{updated_company_name}}\",\n  \"contacts\": [\n    {\n      \"type\": \"phone\",\n      \"value\": \"{{updated_phone}}\"\n    },\n    {\n      \"type\": \"telegram\",\n      \"value\": \"{{telegram_username}}\"\n    }\n  ]\n}"
				},
				"url": {
					"raw": "{{base_url}}/api/clients/{{client_id}}",
					"host": [
						"{{base_url}}"
					],
					"path": [
						"api",
						"clients",
						"{{client_id}}"
					]
				},
				"description": "Update a client and their contacts"
			},
			"response": []
		}
	],
	"variable": [
		{
			"key": "base_url",
			"value": "http://localhost:8000",
			"type": "string",
			"description": "Base URL for your Laravel API"
		},
		{
			"key": "auth_token",
			"value": "your_jwt_token_here",
			"type": "string",
			"description": "JWT token for authentication"
		},
		{
			"key": "company_name",
			"value": "Apple Inc",
			"type": "string",
			"description": "Example company name for testing"
		},
		{
			"key": "client_name",
			"value": "John Doe",
			"type": "string",
			"description": "Example client name for testing"
		},
		{
			"key": "phone_number",
			"value": "+1234567890",
			"type": "string",
			"description": "Example phone number for testing"
		},
		{
			"key": "email",
			"value": "john.doe@example.com",
			"type": "string",
			"description": "Example email for testing"
		},
		{
			"key": "client_id",
			"value": "1",
			"type": "string",
			"description": "Example client ID for testing"
		},
		{
			"key": "updated_client_name",
			"value": "John Smith",
			"type": "string",
			"description": "Updated client name for testing"
		},
		{
			"key": "updated_company_name",
			"value": "Apple Corp",
			"type": "string",
			"description": "Updated company name for testing"
		},
		{
			"key": "updated_phone",
			"value": "+0987654321",
			"type": "string",
			"description": "Updated phone number for testing"
		},
		{
			"key": "telegram_username",
			"value": "@johnsmith",
			"type": "string",
			"description": "Telegram username for testing"
		}
	],
	"auth": {
		"type": "bearer",
		"bearer": [
			{
				"key": "token",
				"value": "{{auth_token}}",
				"type": "string"
			}
		]
	}
}
